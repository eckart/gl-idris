CC = gcc
CFLAGS = `idris --include` `pkg-config --cflags glew glfw3`

gl_idris.o: config gl_idris.c gl_idris.h

# on mac we have to include the frameworks. On linux it should be -lGL (or so I guess)
config: .PHONY
	echo "%flag C \"`pkg-config --cflags glew glfw3`\"" > Graphics/Rendering/Config.idr
	echo "%flag C \"`pkg-config --libs glew glfw3`\"" >> Graphics/Rendering/Config.idr
	echo "%flag C \"-lpng\"" >> Graphics/Rendering/Config.idr
	echo "%flag C \"-framework OpenGL\"" >> Graphics/Rendering/Config.idr
clean: .PHONY
	rm gl_idris.o

.PHONY:
